$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), "/../lib"))

require "gitlab/ci/lint"
require "gitlab/ci/lint/arguments"
require "gitlab/ci/lint/configuration"

arguments = Gitlab::Ci::Arguments.new
configuration = Gitlab::Ci::Configuration.new

Gitlab::Ci::Lint.validate("values.yml", configuration, arguments)
